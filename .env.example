# Application
NODE_ENV=development
PORT=3000
APP_NAME=nodejs-postgres-api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Secrets (Generate strong random strings for production)
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Bcrypt
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security
COOKIE_SECRET=your_cookie_secret_key_here_change_this_in_production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# API
API_PREFIX=/api
API_VERSION=v1